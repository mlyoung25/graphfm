extends layout

block head 
  title Bubble Chart - D3v4

block content
  script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/4.13.0/d3.min.js')
  style.
    
    .bubble {
      fill-opacity: 0.67;
      stroke: #000;
      stroke-width: 1px;
      } 

  #BubbleChart
  script.
    var svg = d3.select("#BubbleChart")
      .append("svg")
      .attr("width", 1000)
      .attr("height", 1000);
    var dataSet = [
        {x: 250, y: 250, radius: 1000},
        {x: 250, y: 500, radius: 100},
        {x: 500, y: 250, radius: 120},
        {x: 0, y: 250, radius: 100}
    ];

    var circles = svg.selectAll("circle")
      .data(dataSet)
      .enter()
      .append("circle");

    var circleAttributes = circles
      .attr("cx", function (d) { return d.x; })
      .attr("cy", function (d) { return d.y; })
      .attr("r", function (d) { return d.radius; })
      .style("fill", "rgba(255, 99, 132, 0.2)")
      .attr("class", "bubble");
